{
    "collectCoverageFrom": [
        "src/**/**",
        "!src/bot.ts",
        "!src/types.ts"
    ],
    "coverageProvider": "v8",
    "transform": {
        "^.+\\.(ts|tsx|js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
        "/node_modules/(?!(execa|strip-final-newline|npm-run-path|path-key|onetime|mimic-fn|human-signals|is-stream|got|p-cancelable|@szmarczak|lowercase-keys|get-stream)/)"
    ],
    "moduleNameMapper": {
        "^(\\.\\.?\\/.+)\\.js$": "$1"
    },
    "moduleFileExtensions": ["ts", "js", "jsx"],
    "moduleDirectories": ["node_modules", "src", "test"]
}